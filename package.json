{
  "name": "open-hr-agent",
  "version": "1.0.0",
  "description": "基于 Github 的 AI 自编排任务管理工具 Monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter hra dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "check": "pnpm run typecheck && pnpm run lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.1"
}
